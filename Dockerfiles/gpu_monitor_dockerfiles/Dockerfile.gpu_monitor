# Use the gpu_base image created earlier
FROM gpu_base:latest

# Set the working directory
WORKDIR /root

# Clone the GPU Performance Repo
RUN /bin/bash -c "git clone https://github.com/bryceshirley/gpu_benchmark_metrics.git && \
    cd gpu_benchmark_metrics && \
    git switch victoriametrics_and_python_package && \
    pip install ."
